<MudText class="mx-auto my-auto" Align=Align.Center Style="min-width: 90px;" Typo="Typo.h3" Color="@Color">@value</MudText>


@code {
    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public int Value { get; set; }

    private int value;

    protected override async Task OnInitializedAsync() {
        await TransitionValue(Value);
    }

    protected override async Task OnParametersSetAsync() {
        await TransitionValue(Value);
    }

    private async Task TransitionValue(int newValue) {
        if (value < newValue) {
            value = newValue;
            return;
        }
        while(value > newValue) {
            value--;
            await InvokeAsync(StateHasChanged);
            await Task.Delay(25);
        }
    }
}
