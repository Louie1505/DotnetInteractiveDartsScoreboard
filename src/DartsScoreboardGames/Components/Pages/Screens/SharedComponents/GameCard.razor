@using DartsScoreboardGames.Services.Games

@typeparam TGame where TGame : IGameState, new()

@inject GameStateProvider GameStateProvider

<MudCard Class="pa-5 mx-10" Style=@($"background-image: url({TGame.Background});background-size: cover;background-position: center;")>
    <MudText Align=Align.Center Typo="Typo.h3">@TGame.Name</MudText>
    <MudImage class="mx-auto my-5" Src=@TGame.Logo Height="250" Width="250" />
    <MudText Class="my-5" Align=Align.Center Typo="Typo.body1">@TGame.Description</MudText>
    <MudButton Variant=Variant.Filled Class="mx-auto" Style="width: 10em" Onclick=@(() => GameStateProvider.SetGameScreen<TGame>()) Disabled=@(GameStateProvider.Players.Count < TGame.PlayerRequirement)>Start Game</MudButton>
    <MudText class="mt-5" Align=Align.Center Typo="Typo.caption">@($"{TGame.PlayerRequirement}+ Players")</MudText>
</MudCard>

