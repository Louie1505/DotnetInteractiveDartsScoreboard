<style>
    .gameview-root {
        display: flex;
        flex-direction: column;
        height: 90vh;
        overflow: hidden;
    }

    .gameview-content {
        flex: 1 1 auto;
        min-height: 0;
        overflow: hidden; 
        transition: flex-basis 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
    }

    .scoreboard-container {
        max-height: 475px;
    }

</style>

<div class="gameview-root">
    <div class="gameview-content">
        @ChildContent
    </div>
    <div>
        <div class="d-flex d-md-none flex-column">
            <div class="scoreboard-container">
                <ScoreKeyboard/>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
